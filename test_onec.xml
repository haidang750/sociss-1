<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="UserInterface"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:id="@+id/user"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_below="@+id/user"
        android:layout_height="wrap_content"
        android:id="@+id/buttom1"
        android:text="1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttom2"
        android:layout_below="@+id/user"
        android:layout_toRightOf="@id/buttom7"
        android:layout_marginLeft="60dp"
        android:text="2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttom3"
        android:layout_below="@id/buttom1"
        android:layout_marginTop="195dp"
        android:text="3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttom4"
        android:layout_marginTop="195dp"
        android:layout_below="@id/buttom3"
        android:text="4"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttom5"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/buttom8"
        android:layout_below="@id/buttom9"
        android:text="5"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttom6"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/buttom3"
        android:layout_below="@id/buttom7"
        android:text="6"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttom7"
        android:layout_below="@+id/user"
        android:layout_toRightOf="@id/buttom1"
        android:layout_marginLeft="60dp"
        android:text="7"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/buttom8"
        android:layout_toRightOf="@id/buttom4"
        android:layout_below="@id/buttom6"
        android:text="8"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="195dp"
        android:id="@+id/buttom9"
        android:layout_toRightOf="@id/buttom6"
        android:layout_below="@id/buttom2"
        android:text="9"/>



</RelativeLayout>